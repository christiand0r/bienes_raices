extends ../../layouts/authentication

block content
  div(class="flex flex-col items-center justify-center min-h-screen")
      h1(class="text-center text-4xl font-extrabold") Bienes
        span(class="font-normal") Raíces

      h2(class="text-center text-xl font-medium my-6")= page

      div(class="max-w-lg w-full rounded-lg p-8 shadow bg-white")
        form(class="flex flex-col gap-4" method="POST")
          input(type="hidden" name="_csrf" value= csrfToken)

          div
            label(for="newPassword" class="block text-sm font-bold uppercase mb-2 text-gray-500") Contraseña nueva
            input(type="password" id="newPassword" name="newPassword" class=`w-full rounded-lg border outline-none px-3 py-2 ${errors && errors.newPassword ? 'border-red-600' : 'border-gray-300'}`)
            if errors && errors.newPassword
              div(class="text-red-600")
                small= errors.newPassword.msg
          
          button(type="submit" class="w-full font-bold uppercase rounded-lg px-3 py-4 transition-colors bg-sky-600 text-white hover:bg-sky-700 ") Restablecer contraseña